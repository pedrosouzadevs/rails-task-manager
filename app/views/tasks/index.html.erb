<h1>Tasks:</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= task.completed ? "[X]":"[  ]" %> - <%=link_to task.title, task_path(task) %>
  <%= link_to "<i class='fa-regular fa-trash-can'></i>".html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </li>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %>
