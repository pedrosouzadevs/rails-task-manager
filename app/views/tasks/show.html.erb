<h1>The Task is</h1>
<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><%= @task.completed ? "[X]":"[ ]"%></p>


<%= link_to "Return to the tasks", tasks_path %>
<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Delete this task?",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
